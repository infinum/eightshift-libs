{
	"name": "infinum/eightshift-libs",
	"description": "WordPress libs developed by Eightshift team to use in modern WordPress.",
	"keywords": [
		"composer",
		"installer",
		"plugin",
		"blocks",
		"Gutenberg",
		"WordPress"
	],
	"homepage": "https://eightshift.com/",
	"license": "MIT",
	"authors": [
		{
			"name": "Eightshift team",
			"email": "team@eightshift.com",
			"homepage": "https://eightshift.com/",
			"role": "Developer / IT Manager"
		}
	],
	"support": {
		"issues": "https://github.com/infinum/eightshift-libs/issues",
		"source": "https://github.com/infinum/eightshift-libs"
	},
	"require": {
		"php": "^7.4 || <8.0",
		"ext-dom": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"php-di/invoker": "^2.3",
		"php-di/php-di": "^6.3"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"dingo-d/wp-pest-integration-test-setup": "1.1.0",
		"infinum/eightshift-coding-standards": "^1.5",
		"php-stubs/wordpress-stubs": "^5.9",
		"roave/security-advisories": "dev-master",
		"wp-cli/wp-cli": "^2.4"
	},
	"autoload": {
		"psr-4": {
			"EightshiftLibs\\": "src/",
			"EightshiftBoilerplate\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"optimize-autoloader": true,
		"process-timeout": 2000,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/installers": true,
			"pestphp/pest-plugin": true
		}
	},
	"scripts": {
		"analyze": "@php ./vendor/bin/phpstan analyze",
		"standards:check": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --runtime-set testVersion 7.4-",
		"standards:fix": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --runtime-set testVersion 7.4-",
		"test:unit": "@php ./vendor/bin/pest --group=unit",
		"test:unit-report": "@php ./vendor/bin/pest --group=unit --log-junit tests/coverage/report.xml",
		"test:integration": "@php ./vendor/bin/pest --group=integration",
		"test:coverage": "@php ./vendor/bin/pest --coverage",
		"check-all": [
			"@standards:check",
			"@analyze",
			"@test:unit",
			"@test:integration"
		]
	}
}

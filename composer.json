{
  "name": "infinum/eightshift-libs",
  "description": "WordPress libs developed by Eightshift team to use in modern WordPress.",
  "keywords": [
    "composer", "installer", "plugin", "library"
  ],
  "homepage": "https://eightshift.com/",
  "license": "MIT",
  "authors": [
    {
      "name": "Eightshift team",
      "email": "team@eightshift.com",
      "homepage": "https://eightshift.com/",
      "role": "Developer / IT Manager"
    }
  ],
  "support": {
    "issues": "https://github.com/infinum/eightshift-libs/issues",
    "source": "https://github.com/infinum/eightshift-libs"
  },
  "require": {
    "php": ">=7.0",
    "php-di/php-di": "^6.0"
  },
  "require-dev": {
    "brain/monkey": "~2.3.0",
    "codedungeon/phpunit-result-printer": "^0.20.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5",
    "infinum/coding-standards-wp": "^0.4.1",
    "pcov/clobber": "^2.0",
    "phpunit/phpunit": "^7",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "classmap": [
      "src/",
      "tests/"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "process-timeout": 2000
  },
  "scripts": {
    "check-cs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "fix-cs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf",
    "setup-tests": "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest",
    "clobber-tests": "@php ./vendor/pcov/clobber/bin/pcov clobber",
    "unclobber-tests": "@php ./vendor/pcov/clobber/bin/pcov unclobber",
    "run-tests-unit": "@php ./vendor/phpunit/phpunit/phpunit -c phpunit.xml.dist --no-coverage --colors=always --testdox",
    "run-tests-unit-cov": "@php ./vendor/phpunit/phpunit/phpunit -c phpunit.xml.dist --colors=always",
    "run-tests-integ": "@php ./vendor/phpunit/phpunit/phpunit -c phpunit-integ.xml.dist --no-coverage --colors=always --testdox",
    "run-tests-integ-cov": "@php ./vendor/phpunit/phpunit/phpunit -c phpunit-integ.xml.dist --colors=always"
  }
}

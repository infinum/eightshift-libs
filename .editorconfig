# https://EditorConfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Empty files
insert_final_newline = false

{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs/develop/schemas/component.json",
	"componentName": "heading",
	"title": "Heading",
	"componentClass": "heading",
	"example": {
		"attributes": {
			"headingContent": "This is heading",
			"headingSize": "52-default",
			"headingColor": "black",
			"headingTag": "h",
			"headingLevel": 2
		}
	},
	"components": {
		"heading": "typography"
	},
	"attributes": {
		"headingSize": {
			"type": "string",
			"default": "52-default"
		},
		"headingTag": {
			"type": "string",
			"default": "h"
		},
		"headingContentSpacingLarge": {
			"type": "integer",
			"variable": "default"
		},
		"headingContentSpacingDesktop": {
			"type": "integer",
			"variable": "default"
		},
		"headingContentSpacingTablet": {
			"type": "integer",
			"variable": "default"
		},
		"headingContentSpacingMobile": {
			"type": "integer",
			"variable": "default"
		}
	},
	"options": {
		"headingSize": [
			"180-default",
			"120-default",
			"80-default",
			"52-default",
			"36-text",
			"24-text",
			"20-text",
			"18-text"
		],
		"headingColor": [
			"black",
			"white"
		]
	},
	"responsiveAttributes": {
		"headingContentSpacing": {
			"large": "headingContentSpacingLarge",
			"desktop": "headingContentSpacingDesktop",
			"tablet": "headingContentSpacingTablet",
			"mobile": "headingContentSpacingMobile"
		}
	}
}
